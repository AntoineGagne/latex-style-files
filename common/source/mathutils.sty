%!TEX encoding = UTF-8 Unicode

\RequirePackage{mathtools}
\RequirePackage{xparse}

% Command for a set
\DeclareDocumentCommand{\set}{mo}{%
    \left\{%
        #1\IfNoValueTF{#2}{}{\mid{} #2}%
    \right\}%
}%
% Command for expressions between parenthesis
\DeclareDocumentCommand{\paren}{m}{%
    \left(#1\right)
}
% Command for absolute values
\DeclareDocumentCommand{\abs}{m}{%
    \left\lvert{}#1\right\rvert%
}
% Command for the norm
\DeclareDocumentCommand{\norm}{m}{%
    \left\lVert{}#1\right\rVert%
}
% Command for the positive integers set
\DeclareMathOperator{\N}{\mathbb{N}}%
% Command for the integers set
\DeclareMathOperator{\Z}{\mathbb{Z}}%
% Command for the Euler constant
\DeclareMathOperator{\e}{\mathrm{e}}%
% Command for easier integral typesetting
\DeclareMathOperator*{\integral}{\int\limits}

% Command for easier probability writting
% Taken from: https://tex.stackexchange.com/a/141685 (Sun Feb 25 13:09:16 EST
% 2018)
\newcommand\givenbase[1][]{\:#1\lvert\:}
\let\given\givenbase%
\newcommand\sgiven{\givenbase[\delimsize]}
\DeclarePairedDelimiterX\Basics[1](){\let\given\sgiven #1}

% Command for the probability operator
\DeclareMathOperator{\probabilityof}{\mathbb{P}}%

\DeclareMathOperator{\meansize}{l_{\mathrm{moy}}}
