%!TEX encoding = UTF-8 Unicode

\RequirePackage{mathtools}
\RequirePackage{xparse}

% Command for a set
\DeclareDocumentCommand{\set}{mo}{%
    \left\{%
        #1\IfNoValueTF{#2}{}{\mid{} #2}%
    \right\}%
}%
% Command for expressions between parenthesis
\DeclareDocumentCommand{\paren}{m}{%
    \left(#1\right)
}
% Command for the cardinal of a set or the absolute value of an element
\DeclareDocumentCommand{\cardinal}{m}{\left|#1\right|}%
% Command for the positive integers set
\DeclareMathOperator{\N}{\mathbb{N}}%
% Command for the integers set
\DeclareMathOperator{\Z}{\mathbb{Z}}%
% Command for the euler constant
\DeclareMathOperator{\e}{\mathrm{e}}%
% Command for easier integral typesetting
\DeclareMathOperator*{\integral}{\int\limits}
